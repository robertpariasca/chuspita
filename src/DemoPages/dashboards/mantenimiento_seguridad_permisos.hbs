                                                                    for="segmanpersed" class="">Sede</label><select
                                                                    name="select" id="segmanpersed"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                                <div class="position-relative form-group"><label
                                                                    for="segmanpercar" class="">Cargo</label><select
                                                                    name="select" id="segmanpercar"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                            <div class="form-row">
                                                                <div class="col-md-4">
                                                                    <div class="position-relative form-group"><label
                                                                    for="segmanpermod" class="">Modulo</label><select
                                                                    name="select" id="segmanpermod"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
