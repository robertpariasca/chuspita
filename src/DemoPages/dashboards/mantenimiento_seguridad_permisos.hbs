                                                                <div class="position-relative form-group"><label
                                                                    for="segmanpermen" class="">Menu</label><select
                                                                    name="select" id="segmanpermen"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="position-relative form-group"><label
                                                                    for="segmanperite" class="">Menuitems</label><select
                                                                    name="select" id="segmanperite"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                            </div>                                                            
                                                            </div>
