{{#> base }}
    <div class="app-main">
        {{> AppSidebar/menubar dash-analytics=this }}
        <div class="app-main__outer">
            <div class="app-main__inner">
                {{> AppHeader/header }}
                <div class="app-inner-layout app-inner-layout-page">
                    
                    <div class="app-inner-layout__wrapper">
                        <div class="app-inner-layout__sidebar">
                            <div class="app-layout__sidebar-inner dropdown-menu-rounded">
                                {{> AppMain/page-menu dash-analytics=this}}
                            </div>
                        </div>
                                            <div class="col-md-6">
                                                <div class="main-card mb-3 card">
                                                    <div class="card-body"><h5 class="card-title">Controls Types</h5>
                                                        <form class="">
                                                            <div class="position-relative form-group"><label
                                                                    for="segmanusuario" class="">Usuario</label><input
                                                                    name="segmanusuario" id="segmanusuario"
                                                                    placeholder="Ingrese Usuario..." type="text"
                                                                    class="form-control"></div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmanpassword"
                                                                    class="">Contraseña</label><input name="segmanpassword"
                                                                                                    id="segmanpassword"
                                                                                                    placeholder="Ingrese Contraseña..."
                                                                                                    type="password"
                                                                                                    class="form-control">
                                                            </div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmannombre" class="">Nombre</label><input
                                                                    name="segmannombre" id="segmannombre"
                                                                    placeholder="Ingrese Nombre..." type="text"
                                                                    class="form-control"></div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmanapellidos" class="">Apellidos</label><input
                                                                    name="segmanapellidos" id="segmanapellidos"
                                                                    placeholder="Ingrese Apellidos..." type="text"
                                                                    class="form-control"></div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmanempresa" class="">Empresa</label><select
                                                                    name="select" id="segmanempresa"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmansede" class="">Sede</label><select
                                                                    name="select" id="segmansede"
                                                                    class="form-control">
                                                            </select></div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmancargo" class="">Cargo</label><select
                                                                    name="select" id="segmancargo"
                                                                    class="form-control">
                                                            </select></div>
      
                                                            <button class="mt-1 btn btn-primary">Agregar</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                    </div>
                </div>
            </div>
            {{> AppFooter/footer }}
        </div>
    </div>
{{/ base }}
