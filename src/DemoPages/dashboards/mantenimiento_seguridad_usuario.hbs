{{#> base }}
    <div class="app-main">
        {{> AppSidebar/menubar dash-analytics=this }}
        <div class="app-main__outer">
            <div class="app-main__inner">
                {{> AppHeader/header }}
                <div class="app-inner-layout app-inner-layout-page">
                    
                    <div class="app-inner-layout__wrapper">
                        <div class="app-inner-layout__sidebar">
                            <div class="app-layout__sidebar-inner dropdown-menu-rounded">
                                {{> AppMain/page-menu dash-analytics=this}}
                            </div>
                        </div>
                                            <div class="col-md-9">
                                                <div class="main-card mb-3 card">
                                                    <div class="card-body"><h5 class="card-title">Registro de Usuario</h5>
                                                        <form class="" method="post" id="formsegmanusuario">
                                                            <div class="position-relative form-group"><label
                                                                    for="segmanusuario" class="">Usuario</label><input
                                                                    name="segmanusuario" id="segmanusuario"
                                                                    placeholder="Ingrese Usuario..." type="text"
                                                                    class="form-control" style="text-transform: lowercase"></div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmanpassword"
                                                                    class="">Contraseña</label><input name="segmanpassword"
                                                                                                    id="segmanpassword"
                                                                                                    placeholder="Ingrese Contraseña..."
                                                                                                    type="password"
                                                                                                    class="form-control">
                                                            </div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmannombre" class="">Nombre</label><input
                                                                    name="segmannombre" id="segmannombre"
                                                                    placeholder="Ingrese Nombre..." type="text"
                                                                    class="form-control"></div>
                                                            <div class="position-relative form-group"><label
                                                                    for="segmanapellidos" class="">Apellidos</label><input
                                                                    name="segmanapellidos" id="segmanapellidos"
                                                                    placeholder="Ingrese Apellidos..." type="text"
                                                                    class="form-control"></div>
                                                            <div class="form-row">
                                                                <div class="col-md-4">
                                                                    <div class="position-relative form-group"><label
                                                                    for="segmanempresa" class="">Empresa</label><select
                                                                    name="select" id="segmanempresa"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                                </div>                                                                
                                                            <div class="col-md-4">
                                                                <div class="position-relative form-group"><label
                                                                    for="segmansede" class="">Sede</label><select
                                                                    name="select" id="segmansede"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="position-relative form-group"><label
                                                                    for="segmancargo" class="">Cargo</label><select
                                                                    name="select" id="segmancargo"
                                                                    class="form-control">
                                                                    <option value="000"> </option>
                                                            </select></div>
                                                            </div>                                                            
                                                            </div>   
                                                            <div class="position-relative form-group">
                                                                <button class="mt-1 btn btn-primary" type="button" name="agregarcargo" id="agregarcargo">Cargar</button>
                                                            </div>
                                            <div class="main-card mb-3 card">
                                                <div class="card-body"><h5 class="card-title">Cargos Asignados</h5>
                                                    <div class="table-responsive">
                                                        <table id="segmanusutbl" class="mb-0 table">
                                                            <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th style="display:none;">CodEmpresa</th>
                                                                <th>Empresa</th>
                                                                <th style="display:none;">CodSede</th>
                                                                <th>Sede</th>
                                                                <th style="display:none;">CodCargo</th>
                                                                <th>Cargo</th>
                                                                <th>Opciones</th>
                                                            </tr>
                                                            </thead>
                                                            <tbody>                                                             
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="btnform">
                                                                        <button class="mb-2 mr-2 btn-icon btn-shadow btn-outline-2x btn btn-outline-success" name='agregarUsuario' id='agregarUsuario'>Agregar</button>
                                                                    </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                    </div>
                </div>
            </div>
            <!--{{> AppFooter/footer }}-->
        </div>
    </div>
{{/ base }}
